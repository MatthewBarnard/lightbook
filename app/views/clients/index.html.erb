<%= render :partial => 'menu', :locals => {:show_controls => true} %>
<%= render :partial => 'layouts/menu', :locals => {:active_menu_item => 3} %>

<div class="content-wrapper">
  <section class="content-header">
    <h1>
      Client List
      <small>See all clients and details</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-users"></i> Clients</a></li>
      <li><a href="#">Client List</a></li>
    </ol>
  </section>

  <section class="content">
    <div class="box">
      <div class="box-header text-center">
        <h1 class="box-title">Clients</h1>
      </div>
      <div class="box-body">
        <table id="table1" class="table table-bordered table-striped">
          <thead>
          <tr>
            <th>Client Name</th>
            <th>Email</th>
            <th>Telephone</th>
            <th>Cellphone</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @clients.each_with_index do |client| %>
              <tr>
                <td><%= client.full_name %></td>
                <td><%= client.email %></td>
                <td><%= client.tell %></td>
                <td><%= client.cell %></td>
                <td class="text-center">
                  <a href="clients/<%= client.id %>/edit" class="btn btn-primary" data-widget="edit" data-toggle="tooltip" title="" data-original-title="Edit"><i class="fa fa-pencil"></i></a>
                  <a class="btn btn-warning" data-widget="message" data-toggle="tooltip" title="" data-original-title="Send Message"><i class="fa fa-envelope"></i></a>
                  <a class="btn btn-info" data-widget="view_visit_history" data-toggle="tooltip" title="" data-original-title="View Visit History"><i class="fa fa-clipboard"></i></a>
                  <% if client.is_active %>
                      <a class="btn btn-danger deactivate-client" client_id="<%= client.id %>" data-widget="remove_client" data-toggle="tooltip" title="" data-original-title="Deactivate"><i class="fa fa-times"></i></a>
                  <% else %>
                      <a href="clients/<%= client.id %>/activate" class="btn btn-success" data-widget="activate_client" data-toggle="tooltip" title="" data-original-title="Reactivate"><i class="fa fa-check"></i></a>
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</div>

<%= render 'modals' %>

<script>
  $(document).ready(function () {
    clients.init();
  })

</script>