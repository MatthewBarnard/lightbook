<%= form_for @service, url: {action: 'create'} do |f| %>
    <%= f.hidden_field :id, value:id %>
    <div class="box-body">
      <div class="form-group">
        <label>Service Name</label>
        <%= f.text_field :name, class:'form-control', placeholder:'Hair Cut' %>
      </div>
      <div class="form-group">
        <label>Price</label>
        <%= f.text_field :price,type:'number', step:'any', class:'form-control', placeholder:'55.00' %>
      </div>
      <div class="form-group">
        <label>Duration <small>(in minutes)</small></label>
        <%= f.text_field :duration, type:'number', class:'form-control', placeholder:'45' %>
      </div>
    </div>
    <div class="box-footer">
      <div class="col-md-6 text-left"><%= link_to '<i class="fa fa-times icon-text-right"></i>Cancel'.html_safe, :back, class: 'btn btn-danger' %></div>
      <div class="col-md-6 text-right">
        <button type="submit" class="btn btn-primary"><i class="fa fa-save icon-text-right"></i>Save</button>
      </div>
    </div>
<% end %>